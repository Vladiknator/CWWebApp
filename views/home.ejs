<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <title>Home</title>
  <style>
    body,
    html {
      height: 100%;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }

    .content-box {
      width: 50%;
      padding: 20px;
      border: 1px solid #000;
      text-align: left;
      margin-bottom: 20px;
    }

    header {
      position: fixed;
      left: 0;
      top: 0;
      width: 100%;
      text-align: center;
      background-color: aquamarine;
      padding: 10px 0;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top navbar-custom">
    <a class="navbar-brand" href="/">Writle</a>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/about">About</a>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= user %>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="/profile">Profile</a>
            <div class="dropdown-divider"></div>
            <form action="/logout" method="post">
              <button class="dropdown-item" type="submit">Logout</button>
            </form>
          </div>
        </li>
  </nav>

  <div class="content-box" id="defaultContent">
    <button class="button-3" role="button" onclick="showCreateForm()">Create New</button>
    <% if (projs && projs.length > 0) { %>
    <button onclick="showExistingForm()">VIEW EXISTING PROJECTS</button>
    <% } %>
  </div>

  <div class="content-box" style="display: none;" id="createForm">
    <h1>Create New</h1>
    <form action="/createprojs" method="post">
      <input type="text" placeholder="Title" name="title" required>
      <input type="submit" value="Create">
    </form>
    <form action="/home" method="=post">
      <input type="submit" value="Back">
    </form>
  </div>

  <div class="content-box" style="display: none;" id="existingForm">
    <h1>Existing Projects</h1>

    <form action="/home" method="post">
      <label for="project">Choose a project:</label>
      <select name="project" id="project">
        <% projs.forEach(function(e) { %>
        <option value="<%= e.id %>"><%= e.title %></option>
        <% }); %>
      </select>
      <input type="submit" value="Submit">
    </form>

    <form action="/deleteProject" method="post">
      <label for="deleteProject">Delete a project:</label>
      <select name="projectId" id="deleteProject">
        <% projs.forEach(function(e) { %>
        <option value="<%= e.id %>"><%= e.title %></option>
        <% }); %>
      </select>
      <input type="submit" value="Delete">
    </form>
    <button onclick="showDefaultContent()">Back</button>
  </div>

  <script src="/public/javascript/home.js"></script>

  <div class="spacer" style="height: 50vh;"></div>

  <footer class="py-5 mt-5 footer-custom">
    <div class="container text-light text-center">
      <p class="display-t mb-3">Writle</p>
      <small class="text-white-50">&copy; Copyright Â© 2024, Writle. All rights reserved.</small>
    </div>
  </footer>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>

</html>