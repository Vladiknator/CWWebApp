  <!-- I should probably move this over to a different javascript file altogether but, for now it's fine.-->
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const body = document.body;
      const darkModeToggle = document.getElementById('darkModeToggle');
      const darkModeIcon = document.getElementById('darkModeIcon');
    
      // Function to toggle dark mode
      function toggleDarkMode() {
        const isDarkMode = !body.classList.contains('dark-mode');
    
        // Update button color and icon based on dark mode state
        if (isDarkMode) {
          // Sun icon
          darkModeToggle.style.backgroundColor = '#801d4d';
          darkModeIcon.src = 'https://imgur.com/qU3gY1q.png';
        } else {
          // Moon icon
          darkModeToggle.style.backgroundColor = '#7fe2b2';
          darkModeIcon.src = 'https://imgur.com/lUBrBwg.png';
        }
    
        // Toggle dark mode class on body
        body.classList.toggle('dark-mode', isDarkMode);
    
        // Update dark mode state in localStorage
        try {
          localStorage.setItem('darkMode', isDarkMode ? 'true' : 'false');
        } catch (e) {
          console.error('Error setting dark mode state in localStorage:', e);
        }
      }
    
      // Retrieve dark mode state from localStorage
      let isDarkMode = localStorage.getItem('darkMode') === 'true';
    
      // Set initial dark mode state
      if (isDarkMode) {
        applyDarkMode();
      } else {
        applyLightMode();
      }
    
      // Function to apply dark mode
      function applyDarkMode() {
        body.classList.add('dark-mode');
        darkModeToggle.style.backgroundColor = '#801d4d'; // Set button background color for dark mode
        darkModeToggle.style.display = 'block'; // Make button visible once dark mode state is applied
        darkModeIcon.style.display = 'block'; // Make icon visible once dark mode state is applied
        darkModeIcon.src = 'https://imgur.com/qU3gY1q.png'; // Set icon source for dark mode
        darkModeToggle.style.backgroundColor = '#801d4d'; // Set button background color for dark mode
        body.style.visibility = 'visible'; // Make body visible
      }
    
      // Function to apply light mode
      function applyLightMode() {
        body.classList.remove('dark-mode');
        darkModeToggle.style.backgroundColor = '#7fe2b2'; // Set button background color for light mode
        darkModeToggle.style.display = 'block'; // Make button visible once light mode state is applied
        darkModeIcon.style.display = 'block'; // Make icon visible once light mode state is applied
        darkModeIcon.src = 'https://imgur.com/lUBrBwg.png'; // Set icon source for light mode
        darkModeToggle.style.backgroundColor = '#7fe2b2'; // Set button background color for light mode
        body.style.visibility = 'visible'; // Make body visible
      }
    
      // Add event listener for dark mode toggle button
      darkModeToggle.addEventListener('click', toggleDarkMode);
    
      // Remove hide-body class to show body after page load
      document.body.classList.remove('hide-body');
    });
    
  </script>
