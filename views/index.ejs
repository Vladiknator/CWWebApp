    <script>
      // JavaScript for toggling dark mode and updating button text, still need to find out why this breaks whenever i put it into index.js
      const darkModeButton = document.getElementById('darkModeToggle');

      darkModeButton.addEventListener('click', function () {
          document.body.classList.toggle('dark-mode');
          if (document.body.classList.contains('dark-mode')) {
              darkModeButton.textContent = 'Light Mode';
              darkModeButton.classList.remove('btn-outline-dark');
              darkModeButton.classList.add('btn-dark');
          } else {
              darkModeButton.textContent = 'Dark Mode';
              darkModeButton.classList.remove('btn-dark');
              darkModeButton.classList.add('btn-outline-dark');
          }
      });
  </script>
